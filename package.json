{
  "name": "@metamodern/design-system",
  "version": "1.1.1",
  "description": "An approach to layout, typography & color with Tailwind CSS",
  "author": "Daniel C. Narey <os@metamodern.design>",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/metamodern-design/design-system"
  },
  "type": "module",
  "main": "./dist/main.cjs",
  "module": "./dist/index.js",
  "exports": {
    ".": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "prebuild": "del dist/*",
    "build": "rollup -c",
    "lint": "eslint --fix src",
    "release": "np",
    "sync": "git pull && git add . && git commit -m 'automated sync' && git push",
    "test": "npm run lint && npm run build && ava",
    "update": "updtr"
  },
  "dependencies": {},
  "devDependencies": {
    "@metamodern/color-system": "^2.0.0",
    "@rollup/plugin-node-resolve": "^8.0.0",
    "ava": "^3.8.2",
    "del-cli": "^3.0.1",
    "eslint": "^7.1.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-ava": "^10.3.0",
    "eslint-plugin-import": "^2.20.2",
    "np": "^5.2.1",
    "rollup": "^2.13.1",
    "updtr": "^3.1.0"
  },
  "engines": {
    "node": ">=12"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "tailwind",
    "tailwindcss",
    "configuration",
    "config",
    "design system",
    "design",
    "system"
  ],
  "ava": {
    "nodeArguments": [
      "--experimental-modules"
    ]
  }
}
